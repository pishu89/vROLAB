<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ns2:workflow xmlns:ns2="http://vmware.com/vco/workflow" root-name="item1" object-name="workflow:name=generic" id="e6d0dddf-c3b1-4839-8e89-852c43a0296a" editor-version="2.0" version="0.0.0" api-version="6.0.0" restartMode="1" resumeFromFailedMode="0">
    <display-name>Get All Large VMs</display-name>
    <description>This workflow illustrates how to find large VMs using a schema-level loop</description>
    <position y="50.0" x="100.0"/>
    <input>
        <param name="cpuCount" type="number">
            <description>Number of vCPUs for a large VM</description>
        </param>
    </input>
    <output>
        <param name="outLargeVMs" type="Array/VC:VirtualMachine">
            <description>Array of large VMs</description>
        </param>
    </output>
    <attrib name="allVMs" type="Array/VC:VirtualMachine">
        <value encoded="n">[]</value>
        <description>Array of all VMs</description>
    </attrib>
    <attrib name="curVM" type="VC:VirtualMachine">
        <value encoded="n"/>
        <description>Current VM to process</description>
    </attrib>
    <attrib name="largeVMs" type="Array/VC:VirtualMachine">
        <value encoded="n">[]</value>
        <description>Array of large VMs</description>
    </attrib>
    <workflow-item name="item1" out-name="item3" type="task" comparator="0">
        <display-name>Get All VMs</display-name>
        <script encoded="false">allVMs = VcPlugin.getAllVirtualMachines();</script>
        <in-binding/>
        <out-binding>
            <bind name="allVMs" type="Array/VC:VirtualMachine" export-name="allVMs"/>
        </out-binding>
        <description>Simple task with custom script capability.</description>
        <position y="60.0" x="150.0"/>
    </workflow-item>
    <workflow-item name="item2" type="end" end-mode="0" comparator="0">
        <position y="160.0" x="280.0"/>
    </workflow-item>
    <workflow-item name="item3" out-name="item4" alt-out-name="item10" type="custom-condition" comparator="0">
        <display-name>More VMs?</display-name>
        <script encoded="false">return (allVMs.length &gt; 0);</script>
        <in-binding>
            <bind name="allVMs" type="Array/VC:VirtualMachine" export-name="allVMs"/>
        </in-binding>
        <out-binding/>
        <description>Custom decision based on a custom script.</description>
        <position y="60.0" x="240.0"/>
    </workflow-item>
    <workflow-item name="item4" out-name="item7" type="task" comparator="0">
        <display-name>Get Next VM</display-name>
        <script encoded="false">curVM = allVMs.pop();</script>
        <in-binding>
            <bind name="allVMs" type="Array/VC:VirtualMachine" export-name="allVMs"/>
        </in-binding>
        <out-binding>
            <bind name="allVMs" type="Array/VC:VirtualMachine" export-name="allVMs"/>
            <bind name="curVM" type="VC:VirtualMachine" export-name="curVM"/>
        </out-binding>
        <description>Simple task with custom script capability.</description>
        <position y="70.0" x="360.0"/>
    </workflow-item>
    <workflow-item name="item7" out-name="item8" alt-out-name="item3" type="custom-condition" comparator="0">
        <display-name>Large VM?</display-name>
        <script encoded="false">if (curVM.summary.config.template) return false; return (curVM.summary.config.numCpu &gt;= cpuCount);</script>
        <in-binding>
            <bind name="curVM" type="VC:VirtualMachine" export-name="curVM"/>
            <bind name="cpuCount" type="number" export-name="cpuCount"/>
        </in-binding>
        <out-binding/>
        <description>Custom decision based on a custom script.</description>
        <position y="150.0" x="340.0"/>
    </workflow-item>
    <workflow-item name="item8" out-name="item9" type="task" comparator="0">
        <display-name>Log Large VM</display-name>
        <script encoded="false">var logMessage = curVM.name + " has " + curVM.summary.config.numCpu + " vCPUs"; System.log(logMessage);</script>
        <in-binding>
            <bind name="curVM" type="VC:VirtualMachine" export-name="curVM"/>
        </in-binding>
        <out-binding/>
        <description>Simple task with custom script capability.</description>
        <position y="70.0" x="460.0"/>
    </workflow-item>
    <workflow-item name="item9" out-name="item3" type="task" comparator="0">
        <display-name>Add Large VM to Output</display-name>
        <script encoded="false">largeVMs.push(curVM);</script>
        <in-binding>
            <bind name="largeVMs" type="Array/VC:VirtualMachine" export-name="largeVMs"/>
            <bind name="curVM" type="VC:VirtualMachine" export-name="curVM"/>
        </in-binding>
        <out-binding>
            <bind name="largeVMs" type="Array/VC:VirtualMachine" export-name="largeVMs"/>
        </out-binding>
        <description>Simple task with custom script capability.</description>
        <position y="10.0" x="260.0"/>
    </workflow-item>
    <workflow-item name="item10" out-name="item2" type="task" comparator="0">
        <display-name>Copy Large VMs to Output</display-name>
        <script encoded="false">outLargeVMs = largeVMs;</script>
        <in-binding>
            <bind name="largeVMs" type="Array/VC:VirtualMachine" export-name="largeVMs"/>
        </in-binding>
        <out-binding>
            <bind name="outLargeVMs" type="Array/VC:VirtualMachine" export-name="outLargeVMs"/>
        </out-binding>
        <description>Simple task with custom script capability.</description>
        <position y="130.0" x="240.0"/>
    </workflow-item>
    <presentation/>
</ns2:workflow>
