        <param name="amountVdisk" type="number"/>
        <param name="amountVram" type="number"/>
        <param name="vmName" type="string">
            <description>Name of new virtual machine</description>
        </param>
    </input>
    <output/>
    <attrib name="defaultVcpus" type="number" conf-id="898b914d-5e8b-4599-8045-f6d610a0c19e" conf-key="defaultVcpus"/>
    <attrib name="defaultVram" type="number" conf-id="898b914d-5e8b-4599-8045-f6d610a0c19e" conf-key="defaultVram"/>
    <attrib name="defaultVdisk" type="number" conf-id="898b914d-5e8b-4599-8045-f6d610a0c19e" conf-key="defaultVdisk"/>
    <attrib name="vcpus" type="number">
        <value encoded="n"/>
    </attrib>
    <attrib name="vram" type="number">
        <value encoded="n"/>
    </attrib>
    <attrib name="vdisk" type="number">
        <value encoded="n"/>
    </attrib>
    <attrib name="newVM" type="VC:VirtualMachine">
        <value encoded="n"/>
        <description>The newly created VM</description>
    </attrib>
    <attrib name="security_group" type="LdapGroup">
        <value encoded="n">vclass.local\ENG-CA-Admins</value>
        <description>Approvers security group.</description>
    </attrib>
    <attrib name="security_assignees" type="Array/LdapUser">
        <value encoded="n">[]</value>
        <description>Not used</description>
    </attrib>
    <attrib name="security_assignee_groups" type="Array/LdapGroup">
        <value encoded="n">[]</value>
        <description>Not used</description>
    </attrib>
    <attrib name="timeout_date" type="Date">
        <value encoded="n">20200910101000000+0000</value>
        <description>Timeout for the User Interaction</description>
    </attrib>
    <attrib name="doesApproverApprove" type="boolean">
        <value encoded="n">false</value>
        <description>Do you approve the request?</description>
    </attrib>
    <workflow-item name="item1" type="end" end-mode="0" comparator="0">
        <in-binding/>
        <out-binding/>
        <position y="194.0" x="310.0"/>
    </workflow-item>
    <workflow-item name="item2" out-name="item8" alt-out-name="item7" type="custom-condition" comparator="0">
        <display-name>VM Too big?</display-name>
        <script encoded="false">var isVmTooBig = false;

System.log("vcpus:         " + vcpus);
System.log("defaultVcpus:  " + defaultVcpus);
System.log("vVram:         " + vram);
System.log("defaultVram:   " + defaultVram);
System.log("vdisk:         " + vdisk);
System.log("defaultVdisk:  " + defaultVdisk);

if (vcpus &gt; defaultVcpus) { 
    System.warn("Too many vCPUs");
    isVmTooBig = true;
}

if (vram &gt; defaultVram) {
    System.warn("Too much vRAM");
    isVmTooBig = true;
}

if (vdisk &gt; defaultVdisk) {
    System.warn("Too much vDisk");
    isVmTooBig = true;
}

return isVmTooBig;</script>
        <in-binding>
            <bind name="defaultVcpus" type="number" export-name="defaultVcpus"/>
            <bind name="defaultVram" type="number" export-name="defaultVram"/>
            <bind name="defaultVdisk" type="number" export-name="defaultVdisk"/>
            <bind name="vcpus" type="number" export-name="vcpus"/>
            <bind name="vram" type="number" export-name="vram"/>
            <bind name="vdisk" type="number" export-name="vdisk"/>
        </in-binding>
        <out-binding/>
        <description>Custom decision based on a custom script.</description>
        <position y="65.0" x="270.0"/>
    </workflow-item>
    <workflow-item name="item3" out-name="item2" type="task" comparator="0">
        <display-name>Copy inputs to variables</display-name>
        <script encoded="false">vcpus = numberOfVcpus;
vram = amountVram;
vdisk = amountVdisk;</script>
        <in-binding>
            <bind name="numberOfVcpus" type="number" export-name="numberOfVcpus"/>
            <bind name="amountVram" type="number" export-name="amountVram"/>
            <bind name="amountVdisk" type="number" export-name="amountVdisk"/>
        </in-binding>
        <out-binding>
            <bind name="vcpus" type="number" export-name="vcpus"/>
            <bind name="vram" type="number" export-name="vram"/>
            <bind name="vdisk" type="number" export-name="vdisk"/>
        </out-binding>
        <description>Simple task with custom script capability.</description>
        <position y="75.0" x="141.0"/>
    </workflow-item>
    <workflow-item name="item4" type="end" end-mode="0" comparator="0">
        <in-binding/>
        <out-binding/>
        <position y="64.5" x="660.0"/>
    </workflow-item>
    <workflow-item name="item5" out-name="item7" alt-out-name="item4" type="condition" comparator="0">
        <display-name>Request approved?</display-name>
        <script encoded="false">// Generated by the system, cannot be edited
return (doesApproverApprove === true);</script>
        <in-binding>
            <bind name="doesApproverApprove" type="boolean" export-name="doesApproverApprove"/>
        </in-binding>
        <out-binding/>
        <description>Custom decision based on a custom script.</description>
        <condition name="doesApproverApprove" type="boolean" comparator="0" label="null"></condition>
        <position y="65.0" x="499.0"/>
    </workflow-item>
    <workflow-item name="item7" out-name="item1" type="link" linked-workflow-id="a87dab23-7a5c-4fb5-a420-7342426007c9" comparator="0">
        <display-name>Create VM</display-name>
        <in-binding>
            <bind name="vmName" type="string" export-name="vmName"/>
            <bind name="numberOfVcpus" type="number" export-name="numberOfVcpus"/>
            <bind name="amountVram" type="number" export-name="amountVram"/>
            <bind name="amountVdisk" type="number" export-name="amountVdisk"/>
        </in-binding>
        <out-binding>
            <bind name="newVM" type="VC:VirtualMachine" export-name="newVM"/>
        </out-binding>
        <description> </description>
        <position y="138.0" x="270.0"/>
    </workflow-item>
    <workflow-item name="item8" out-name="item5" type="input" comparator="0">
        <display-name>Get Approval</display-name>
        <in-binding>
            <bind name="security.group" type="LdapGroup" export-name="security_group">
                <description>Any user member of this group will be authorized to fill in this form.</description>
            </bind>
            <bind name="security.assignees" type="Array/LdapUser" export-name="security_assignees">
                <description>Any user from this array of users will be authorized to fill in this form</description>
            </bind>
            <bind name="security.assignee.groups" type="Array/LdapGroup" export-name="security_assignee_groups">
                <description>Any user member of any of the groups will be authorized to fill in this form.</description>
            </bind>
            <bind name="timeout.date" type="Date" export-name="timeout_date">
                <description>If not null, this input item will wait until date and will continue workflow execution.</description>
            </bind>
        </in-binding>
        <out-binding>
            <bind name="doesApproverApprove" type="boolean" export-name="doesApproverApprove"/>
            <bind name="vcpus" type="number" export-name="vcpus"/>
            <bind name="vram" type="number" export-name="vram"/>
            <bind name="vdisk" type="number" export-name="vdisk"/>
        </out-binding>
        <description>Use this element to set up a user interaction.</description>
        <presentation/>
        <position y="75.5" x="392.0"/>
    </workflow-item>
    <presentation/>
</ns2:workflow>
