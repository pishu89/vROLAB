<ns2:workflow xmlns:ns2="http://vmware.com/vco/workflow" root-name="item3" object-name="workflow:name=generic" id="8ce20b25-b087-4643-9eb0-a348dfdaf945" editor-version="2.0" version="0.0.0" api-version="6.0.0" allowed-operations="evf" restartMode="1" resumeFromFailedMode="0">
    <display-name>Workflow that Uses a User Interaction for Approvals</display-name>
