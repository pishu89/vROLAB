  <workflow-item name="item5" out-name="item3" type="task">
    <display-name><![CDATA[Generate VM name]]></display-name>
    <script encoded="false"><![CDATA[const prefix = "vm-";

function pad(number, size) {
    //System.log("number=" + number);
    //System.log("size=" + size);
    var s = String(number);
    //System.log("s=" + s);
    while (s.length < (size || 2)) {
        s = "0" + s;
        //System.log("s=" + s);
    }
    return s;
}

vmName = prefix + pad((counter + 1), 3);

//System.log("counter=" + counter);
System.log("vmName=" + vmName);
System.log("BREAKPOINT");]]></script>
    <in-binding>
